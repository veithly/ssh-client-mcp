# SSH Client MCP Server Configuration

# ===========================================
# Global Settings
# ===========================================

# Session timeout in milliseconds (default: 30 minutes)
SESSION_TIMEOUT=1800000

# Maximum number of concurrent sessions (default: 100)
MAX_SESSIONS=100

# Connection timeout in milliseconds (default: 30 seconds)
SSH_CONNECTION_TIMEOUT=30000

# Default server ID (optional)
SSH_DEFAULT_SERVER=dev-server

# Enable debug logging (default: false)
DEBUG=false

# ===========================================
# Server Configuration via Environment
# ===========================================
# Format: SSH_SERVER_<ID>_<FIELD>=value
#
# Required fields: HOST, USERNAME
# Optional fields: PORT, PASSWORD, PRIVATEKEY, PASSPHRASE, NAME, DESCRIPTION, TAGS

# Example: Development Server
SSH_SERVER_DEV_HOST=192.168.1.100
SSH_SERVER_DEV_PORT=22
SSH_SERVER_DEV_USERNAME=developer
SSH_SERVER_DEV_PASSWORD=your-password-here
SSH_SERVER_DEV_NAME=Development Server
SSH_SERVER_DEV_DESCRIPTION=Local development server
SSH_SERVER_DEV_TAGS=dev,local

# Example: Production Server with SSH Key
SSH_SERVER_PROD_HOST=prod.example.com
SSH_SERVER_PROD_PORT=22
SSH_SERVER_PROD_USERNAME=deploy
SSH_SERVER_PROD_PRIVATEKEY=~/.ssh/id_rsa
SSH_SERVER_PROD_PASSPHRASE=optional-passphrase
SSH_SERVER_PROD_NAME=Production Server
SSH_SERVER_PROD_DESCRIPTION=Main production server
SSH_SERVER_PROD_TAGS=prod,web
